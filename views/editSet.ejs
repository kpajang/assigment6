<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set - <%= set.name %></title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <%- include('partials/navbar', {page: '' }); %>

    <div class="container mx-auto my-5">
        <div class="hero bg-base-200 rounded-lg p-6">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold mb-5">Edit Set - <%= set.name %></h1>

                    <!-- Delete Set Button -->
                    <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error mt-4" onclick="return confirm('Are you sure you want to delete this set?');">Delete Set</a>

                    <form action="/lego/editSet" method="POST">

                        <!-- Spacing added via style attribute -->
                        <div style="margin-bottom: 20px;">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" placeholder="Name" value="<%= set.name %>" required>
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label for="year">Year:</label>
                            <input type="number" id="year" name="year" placeholder="Year" value="<%= set.year %>" required>
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label for="num_parts">Number of Parts:</label>
                            <input type="number" id="num_parts" name="num_parts" placeholder="Number of Parts" value="<%= set.num_parts %>" required>
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label for="img_url">Image URL:</label>
                            <input type="url" id="img_url" name="img_url" placeholder="Image URL" value="<%= set.img_url %>">
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label for="theme_id">Theme:</label>
                            <select id="theme_id" name="theme_id" required>
                                <% themes.forEach(theme => { %>
                                    <option <%= set.theme_id == theme.id ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label for="set_num">Set Number:</label>
                            <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly required>
                        </div>
                        
                        <button type="submit">Update Set</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

