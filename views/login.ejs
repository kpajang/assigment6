<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Add your stylesheet links here (if any) -->
</head>
<body>
    <!-- Login Form -->
    <form method="POST" action="/login" class="form-container">
        <!-- User Name Input -->
        <div class="form-group">
            <input type="text" name="userName" placeholder="User Name" required value="<%= typeof userName !== 'undefined' ? userName : '' %>">
        </div>

        <!-- Password Input -->
        <div class="form-group">
            <input type="password" name="password" placeholder="Password" required>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

        <!-- Error Message (DaisyUI Alert) -->
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="alert alert-error">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= errorMessage %></span>
            </div>
        <% } %>
    </form>
</body>
</html>
